extends ../layouts/main.pug
block content
  .container
    header
      h1= Title

    div
      table.table.table-striped
        thead
          tr
            th Title
            th Status
            th Actions
        
        tbody
          each task in tasks
            tr
              td
                a(href=`/tasks/${task.id}`)= task.title
              td= task.status
              td
                a(href=`/tasks/${task.id}/edit`) edit
                = " | "
                form.destroy(action="/tasks/destroy", method="POST", onsubmit='return confirm("Are You Sure?")')
                  input(type="hidden", name="id", value=task.id)
                  input(type="submit", value="delete")